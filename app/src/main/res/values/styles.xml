<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Scientific buttons -->
    <style name="ScientificButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="autoSizeMaxTextSize">@dimen/maxSciTextSize</item>
        <item name="autoSizeMinTextSize">@dimen/minSciTextSize</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <!-- Number buttons -->
    <style name="NumberButton" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/marginEnd</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="autoSizeMaxTextSize">@dimen/maxNumTextSize</item>
        <item name="autoSizeMinTextSize">@dimen/minNumTextSize</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <!-- Operator buttons -->
    <style name="OperatorButton" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/black</item>
        <item name="autoSizeMaxTextSize">@dimen/maxOperatorTextSize</item>
        <item name="autoSizeMinTextSize">@dimen/minOperatorTextSize</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <!-- Delete buttons -->
    <style name="DeleteButton" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/marginEnd</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/colorOnSecondaryContainer</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="autoSizeMaxTextSize">@dimen/maxDelTextSize</item>
        <item name="autoSizeMinTextSize">@dimen/minDelTextSize</item>
        <item name="autoSizeStepGranularity">4sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <!-- Dialog theme. -->
    <style name="DialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/DialogButton</item>
    </style>
    <style name="DialogButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/orange</item>
    </style>
</resources>