<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Scientific buttons -->
    <style name="ScientificButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/sciMarginEnd</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="autoSizeMaxTextSize">@dimen/maxSciTextSize</item>
        <item name="autoSizeMinTextSize">@dimen/minSciTextSize</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="rippleColor">?attr/color</item>
    </style>

    <!-- Number buttons -->
    <style name="NumberButton" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/buttonMarginEnd</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="autoSizeMaxTextSize">@dimen/maxNumTextSize</item>
        <item name="autoSizeMinTextSize">@dimen/minNumTextSize</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="rippleColor">?attr/color</item>
    </style>

    <!-- Operator buttons -->
    <style name="OperatorButton" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/black</item>
        <item name="autoSizeMaxTextSize">@dimen/maxOperatorTextSize</item>
        <item name="autoSizeMinTextSize">@dimen/minOperatorTextSize</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="rippleColor">?attr/color</item>
    </style>

    <!-- Delete buttons -->
    <style name="DeleteButton" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/buttonMarginEnd</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:backgroundTint">?attr/colorOnSecondaryContainer</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="autoSizeMaxTextSize">@dimen/maxDelTextSize</item>
        <item name="autoSizeMinTextSize">@dimen/minDelTextSize</item>
        <item name="autoSizeStepGranularity">4sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="rippleColor">?attr/color</item>
    </style>

    <!-- Result text -->
    <style name="ResultText" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:layout_marginStart">@dimen/resultMarginStart</item>
        <item name="android:layout_marginEnd">@dimen/resultMarginEnd</item>
        <item name="android:layout_marginBottom">@dimen/resultMarginBottom</item>
        <item name="android:lines">1</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textSize">@dimen/resultTextSize</item>
    </style>

    <!-- Input text -->
    <style name="InputText" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:gravity">end</item>
        <item name="android:inputType">number</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:paddingStart">@dimen/inputPaddingStart</item>
        <item name="android:paddingTop">@dimen/inputPaddingTop</item>
        <item name="android:paddingEnd">@dimen/inputPaddingEnd</item>
        <item name="android:paddingBottom">@dimen/inputPaddingBottom</item>
        <item name="android:singleLine">true</item>
        <item name="android:text">@string/digits</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/inputTextSize</item>
    </style>

    <!-- Dialog theme. -->
    <style name="DialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialAlertDialogBodyTextStyle">@style/DialogContentText</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveDialogButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralDialogButton</item>
    </style>
    <style name="DialogContentText" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="PositiveDialogButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/orange</item>
    </style>
    <style name="NeutralDialogButton" parent="Widget.Material3.Button.TextButton.Dialog.Flush">
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <!-- BottomSheet Theme. -->
    <style name="BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/SheetStyle</item>
    </style>

    <style name="SheetStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="behavior_peekHeight">@dimen/peekHeight</item>
    </style>
</resources>